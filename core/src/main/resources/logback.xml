<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="false">
	<jmxConfigurator />
	<appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%date [%thread] %-5level %logger{30} %M %L - %msg%n
			</pattern>
		</encoder>
	</appender>
	
	<root>
		<level value="DEBUG" />
		<appender-ref ref="stdout"/>
	</root>
 	
