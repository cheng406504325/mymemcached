	<appender name="dealerPwdFile"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${dealerpwd.log.file.name}.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${dealerpwd.log.file.name}.%d{yyyy-MM-dd}.log
			</fileNamePattern>
			<!-- keep 30 days' worth of history -->
			<maxHistory>180</maxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{80} - %msg%n</pattern>
		</encoder>
	</appender>
	
	<appender name="smsfail"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${smsfail.log.file.name}.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- rollover daily -->
			<fileNamePattern>${smsfail.log.file.name}.%d{yyyy-MM-dd}.%i.log
			</fileNamePattern>
			<timeBasedFileNamingAndTriggeringPolicy
				class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<!-- or whenever the file size reaches 100MB -->
				<maxFileSize>20mb</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>
			<!-- keep 30 days' worth of history -->
			<maxHistory>180</maxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%date %-5level [%-20thread] %logger{20} - %msg%n</pattern>
		</encoder>
	</appender>
	
	<appender name="sessionAppender"	class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${session.log.file.name}.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- rollover daily -->
			<fileNamePattern>${session.log.file.name}.%d{yyyy-MM-dd}.%i.log
			</fileNamePattern>
			<timeBasedFileNamingAndTriggeringPolicy
				class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<!-- or whenever the file size reaches 100MB -->
				<maxFileSize>20mb</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>
			<!-- keep 30 days' worth of history -->
			<maxHistory>180</maxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%date %-5level [%-20thread] %logger{20} - %msg%n</pattern>
		</encoder>
	</appender>
	
	<appender name="allFile"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${all.log.file.name}.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- rollover daily -->
			<fileNamePattern>${all.log.file.name}.%d{yyyy-MM-dd}.%i.log
			</fileNamePattern>
			<timeBasedFileNamingAndTriggeringPolicy
				class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<!-- or whenever the file size reaches 100MB -->
				<maxFileSize>200mb</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>
			<!-- keep 30 days' worth of history -->
			<maxHistory>180</maxHistory>
		</rollingPolicy>
	
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} %-5level [%-20thread] %logger{20} - %msg%n</pattern>
		</encoder>
	</appender>
	
	<appender name="asyncAll" class="ch.qos.logback.classic.AsyncAppender">
		<queueSize>10240</queueSize>
		<appender-ref ref="allFile" />
	</appender>
	
	<root>
		<level value="DEBUG" />
		<appender-ref ref="asyncAll" />
		<!--<appender-ref ref="kefuFile" />-->
		<!--<appender-ref ref="walletFile" />-->
	</root>
 	
	<logger name="com.dm">
		<level value="DEBUG" />
		<appender-ref ref="stdout"></appender-ref>
	</logger>
	
	<logger name="com.dm.framework.cache">
		<level value="DEBUG" />
	</logger>
	
	<!-- 需要记录日志的包 -->
	<logger name="org.springframework">
		<level value="DEBUG"/>
	</logger>

	<logger name="org.mybatis" additivity="false">
		<level value="${log.sql.parameter.trace}" />
		<appender-ref ref="sqlFile" />
		<appender-ref ref="stdout" />
	</logger>

	<logger name="com.dm.framework.security.repo" additivity="false">
		<level value="DEBUG" />
		<appender-ref ref="sqlFile" />
		<appender-ref ref="stdout"></appender-ref>
	</logger>

	
	<!-- 短信发送失败专用日志 -->
	<logger name="asyncSmsfailLOGGER">
		<level value="DEBUG" />
		<appender-ref ref="smsfail" />
	</logger>
	
	<!-- Session信息记录日志 -->
	<logger name="sessionLogger">
		<level value="DEBUG" />
		<appender-ref ref="sessionAppender" />
	</logger>

	<!--添加客服日志日志输出-->
	<logger name="com.dm">
		<level value="DEBUG" />
		<appender-ref ref="stdout"></appender-ref>
	</logger>

</configuration>